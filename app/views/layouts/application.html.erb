


<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : site_name %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Rails Bootstrap" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>

	      <h1><%= site_name %></h1>
	      <hr>
	      <p><% if user_signed_in? %> <!-- if user is signed in, display sign-out button, if not, display button to sign up or log in -->
			<p>Signed in as : <b class="username"><%= current_user.email %></b> or <%= link_to "Sign out", destroy_user_session_path, :method => 'delete' %></p>
			<% else %>
				<a href="/users/sign_in">Sign In</a> or <a href="/users/sign_up">Sign Up</a>
			<% end %></p><hr>
			
	      	<%= yield %>

	</body>
</html>